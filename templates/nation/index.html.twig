{% extends 'base.html.twig' %}

{% block title %}Nation index{% endblock %}

{% block body %}
    <h1>Nation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nation in nations %}
            <tr>
                <td>{{ nation.id }}</td>
                <td>{{ nation.name }}</td>
                <td>{{ nation.code }}</td>
                <td>
                    <a href="{{ path('nation_show', {'id': nation.id}) }}">show</a>
                    <a href="{{ path('nation_edit', {'id': nation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('nation_new') }}">Create new</a>
{% endblock %}
