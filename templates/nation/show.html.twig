{% extends 'base.html.twig' %}

{% block title %}
    {% trans from 'base' %}title{% endtrans %} | {% trans from 'nation' %}nation_menu{% endtrans %} |
    {{ nation.name }}
{% endblock %}

{% block body %}
    <h1 class="table-header">
        <img src="{{ asset('/build/img/nation/' ~ nation.code ~ '.png') }}" class="nation-flag"/>
        <span>{{ nation.name }}</span>
    </h1>
    <table class="table table-hover table-dark">
        <tbody>
            <tr>
                <th>{% trans from 'nation' %}name{% endtrans %}</th>
                <td>{{ nation.name }}</td>
            </tr>
            <tr>
                <th>{% trans from 'nation' %}code{% endtrans %}</th>
                <td>{{ nation.code }}</td>
            </tr>
            <tr>
                <th>{% trans from 'nation' %}players_count{% endtrans %}</th>
                <td>{{ nation.players|length }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('nation_index') }}" class="btn btn-secondary">
        {{ icon('arrow_back_ios', 'icon-secondary') }} {% trans from 'nation' %}nation_index{% endtrans %}
    </a>
    <a href="{{ path('nation_edit', {'id': nation.id}) }}" class="btn btn-warning btn-return">
        {{ icon('edit', 'icon-warning') }} {% trans from 'button' %}edit{% endtrans %}
    </a>

    {{ include('nation/form/delete.html.twig') }}
{% endblock %}
